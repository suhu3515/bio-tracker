<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmDetailsActivity"
    android:background="#F44336">

    <TextView
        android:id="@+id/text_view_details_fish_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text_view_details_fish_name"
        android:text="3605"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_view_details_fish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:text="GIFT TILLAPIA"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/text_view_details_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_details_fish_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="   2021/04/15"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="28sp"
        android:drawableLeft="@drawable/calendar_logo"/>

    <TextView
        android:id="@+id/text_view_details_est_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_details_start_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="   6 months"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="28sp"
        android:drawableLeft="@drawable/time_logo"/>

    <TextView
        android:id="@+id/text_view_details_tank_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_details_est_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="   175 LITER TANK"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="28sp"
        android:drawableLeft="@drawable/logo_waves"/>

    <Button
        android:id="@+id/button_details_add_daily_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD DATA"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_details_tank_volume"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@android:color/white"/>

    <Button
        android:id="@+id/button_details_view_daily_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPORTS"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_details_tank_volume"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>