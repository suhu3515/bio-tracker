<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_frame"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="#F44336"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/text_view_profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="USAMA BIN ABOOBACKER"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/text_view_profile_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="9633058949"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/text_view_profile_user_name"/>

        <TextView
            android:id="@+id/text_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="VIEW PROFILE >"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/text_view_profile_user_phone"
            android:layout_toRightOf="@id/profile_pic"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_farm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="farm details"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/profile_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>